<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Group1AndroidProject.Views.EntryPage"
             Title="">

    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        VerticalOptions="Center">

        <Image Source="connection_network_social_icon.png" Margin="100" HeightRequest="200"
               IsVisible="True" VerticalOptions="Center" HorizontalOptions="Center" />

        <Label 
            Text="Welcome to Find My Buddies App!"
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold" />

        <Label
            Text="Enter Your Nickname:"
            FontSize="Medium" FontAttributes="Bold"/>
        <Entry
            x:Name="nickEntry"
            Placeholder="Nickname"
            FontSize="Small"/>

        <Button
            x:Name="enterButton"
            Text="Enter"
            FontSize="Medium"
            FontAttributes="Bold"
            BackgroundColor="#31e8c3"
            TextColor="Black"
            CornerRadius="20"
            Clicked="enterButton_Clicked" />

    </VerticalStackLayout>
</ContentPage>
