<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Group1AndroidProject.Views.EntryPage"
             Title="Entry Page">

    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        VerticalOptions="Center">

        <Label 
            Text="Welcome to Find My Buddies App!"
            HorizontalOptions="Center"
            FontSize="Medium"
            FontAttributes="Bold" />

        <Label
            Text="Enter Your Nickname:"
            FontSize="Small" />

        <Entry
            x:Name="nickEntry"
            Placeholder="Nickname"
            FontSize="Small"/>

        <Button
            x:Name="enterButton"
            Text="Enter"
            FontSize="Medium"
            BackgroundColor="LightBlue"
            TextColor="White"
            CornerRadius="10"
            Clicked="enterButton_Clicked" />

    </VerticalStackLayout>
</ContentPage>
